<div class='story editable' {{action "storyClicked" on="click"}}>
  <h2>{{story.title}}</h2>
  <div>
    Pieces:
    <br />
    <div class='pieces'>
      {{#each story.pieces}}
      <span>{{formatted-text this.text}} ({{this.user.email}})</span>
      {{/each}}
      {{#if canPost}}
      {{editable-content text=newPiece.text}}
      {{/if}}
    </div>

  {{#if canPost}}
      <div class='hidden-textarea-wrapper'>
        {{textarea value=newPiece.text}}
      </div>
      <br />
      <button {{action 'createPiece'}}>Create Piece</button>
    {{else}}
      <div>
        <strong>You can't add a piece right now...</strong>
      </div>
  {{/if}}

</div>
