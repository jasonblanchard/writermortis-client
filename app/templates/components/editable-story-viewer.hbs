<div class='story editable' {{action "storyClicked" on="click"}}>
  <h2>{{story.title}}</h2>
  <div>
    <div class='pieces'>
      <span class='transition-piece' {{bind-attr data-author=visiblePiece.user.email}}>{{formatted-text visiblePiece.text}}</span>
      {{#if canPost}}
        {{editable-content text=newPiece.text}}
        <br />
        <br />
        {{sentence-counter maxSentences=story.maxSentences text=newPiece.text}}
      {{/if}}
    </div>

  {{#if canPost}}
      <div class='hidden-textarea-wrapper'>
        {{textarea value=newPiece.text}}
      </div>
      <br />
      <button {{action 'createPiece'}} class='btn btn-success'>Create Piece</button>
    {{else}}
      <div>
        <strong>You can't add a piece right now...</strong>
      </div>
  {{/if}}

</div>
